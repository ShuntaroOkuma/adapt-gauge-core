# ============================================================
# adapt-gauge-core: Environment Variables
# ============================================================
# Copy this file to .env and fill in your values.
#   cp .env.example .env
# ============================================================

# --- Google Cloud / Vertex AI ---
# Required for Gemini models (gemini-2.5-pro, gemini-2.5-flash, etc.)
GCP_PROJECT_ID=your-gcp-project-id

# --- Anthropic ---
# Required for Claude models (claude-sonnet-4-5, claude-haiku-4-5, etc.)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# --- LMStudio (local models) ---
# Required only when using lmstudio/* models
# LMSTUDIO_BASE_URL=http://localhost:1234/v1
# LMSTUDIO_API_KEY=lm-studio

# --- LLM Judge (grader) ---
# Enable LLM-based scoring for llm_judge tasks
LLM_JUDGE_ENABLED=true
LLM_JUDGE_GRADER_MODEL=gemini-2.5-flash
# LLM_JUDGE_TIMEOUT_SECONDS=30
# LLM_JUDGE_MAX_RETRIES=2
# LLM_JUDGE_FALLBACK_METHOD=f1

# --- Harness Settings (Optional: uses defaults if not set) ---
# HARNESS_NUM_TRIALS=3
# HARNESS_AGGREGATION=mean
# HARNESS_SUCCESS_THRESHOLD=0.8
# HARNESS_PASS_AT_K=true
# HARNESS_K_VALUES=1,3
# HARNESS_NEW_CLIENT_PER_TRIAL=true
# HARNESS_TIMEOUT_SECONDS=120
# HARNESS_MAX_RETRIES=3
# HARNESS_RETRY_DELAY_SECONDS=1.0
